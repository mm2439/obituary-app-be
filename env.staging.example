# Staging Environment Configuration
NODE_ENV=staging
APP_PORT=5000

# MySQL Database Configuration (Cloud MySQL - PlanetScale recommended)
DB_USERNAME=your_cloud_mysql_username
DB_PASSWORD=your_cloud_mysql_password
DB_DATABASE=obituary-app-staging
DB_HOST=your_cloud_mysql_host
DB_PORT=3306
DB_DIALECT=mysql

# Supabase Auth Configuration (for authentication only)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# JWT Configuration
ACCESS_TOKEN_SECRET=your_access_token_secret
REFRESH_TOKEN_SECRET=your_refresh_token_secret
ACCESS_TOKEN_EXPIRY_SECONDS=3600
REFRESH_TOKEN_EXPIRY_SECONDS=604800

# User Roles
USER_ROLE=user
FUNERAL_COMPANY_ROLE=funeral_company
FLORIST_ROLE=florist

# CORS Configuration
CORS_ORIGIN=https://your-staging-frontend.vercel.app,https://your-staging-frontend.netlify.app

# Database Sync (be careful with this in staging!)
FORCE_DB_SYNC=false
